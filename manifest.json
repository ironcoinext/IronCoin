{
  "manifest_version": 2,
  "name": "IronCoin Anti-Phishing",
  "short_name": "IronCoin",
  "description": "IronCoin helps to prevent phishing and hijacking to protect your Bitcoin and cryptocurreny.",
  "version": "1.0",
  "author": "IronCoin",
  "background": {
  "scripts": ["js/OneSignal.js", "js/backgroundflow.js", "js/googleAnalytics.js"]
},
  "browser_action": {
    "default_icon": "icons/icon_green.png",
    "default_popup": "html/optionPopup.html",
    "default_title": "IronCoin"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/punycode.js", "js/runner.js"]
    }
  ],
  "optional_permissions": [
    "history"
  ],
  "web_accessible_resources": [
    "css/alert.css",
    "html/warning.html",
    "icons/icon_green.png"
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "https://www.google-analytics.com/*",
	"gcm",
	"notifications",
	"certificateProvider",
	"identity"
  ],
  "icons": {
    "128": "icons/ironSecIcon.png",
    "48": "icons/ironSecIcon48.png",
    "16": "icons/icon-ironsec16.png"
  }
}
